<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/filmCover"
        android:src="@mipmap/ic_launcher"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="203dp"
        android:layout_marginLeft="8dp"
        android:layout_weight="4"
        android:orientation="vertical"
        android:padding="6dp">

        <TextView
            android:id="@+id/txvJudul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Judul Film"

            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txvGenre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Genre" />

        <TextView
            android:id="@+id/txvTahun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Tahun Rilis" />

        <TextView
            android:id="@+id/txvProduser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Produser" />

        <TextView
            android:id="@+id/txvPemeran"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Pemeran Utama" />

<!--        <Button-->
<!--            android:id="@+id/btnDelete"-->
<!--            android:layout_width="59dp"-->
<!--            android:layout_height="33dp"-->
<!--            android:text="DELETE"-->
<!--            android:backgroundTint="#ff0000"-->
<!--            android:textSize="10sp" />-->
    </LinearLayout>
</LinearLayout>